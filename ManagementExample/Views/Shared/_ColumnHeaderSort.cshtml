@if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrder.ASC.ToString())
{
	<th>
		<a href="~/players/index?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)&sortOrder=@(nameof(SortOrder.DESC))">@ViewBag.DisplayName</a>
		<i class="fa-solid fa-sort-up"></i>
	</th>
}

else if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrder.DESC.ToString())
{
	<th>
		<a href="~/players/index?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)&sortOrder=@(nameof(SortOrder.ASC))">@ViewBag.DisplayName</a>
		<i class="fa-solid fa-sort-down"></i>
	</th>
}
else
{
	<th>
		<a href="~/players/index?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)&sortOrder=@(nameof(SortOrder.ASC))">@ViewBag.DisplayName</a>
	</th>
}