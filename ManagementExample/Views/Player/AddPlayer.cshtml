@{
	ViewBag.Title = "Add Player";
}

<a href="~/players/index" class="link-hover">Player List</a>
<h2>Add Player</h2>

<div class="w-50">
	<form action="~/players/add" method="post">

		@* Nickname *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Nickname" class="form-label pt">Nickname</label>
			</div>
			<div class="flex-1">
				<input type="text" id="Nickname" name="Nickname" class="form-input" />
			</div>
		</div>

		@* Team *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Team" class="form-label pt">Team</label>
			</div>
			<div class="flex-1">
				<input type="text" id="Team" name="Team" class="form-input" />
			</div>
		</div>

		@* Mouse *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Mouse" class="form-label pt">Mouse</label>
			</div>
			<div class="flex-1">
				<select name="Mouse" id="Mouse" class="form-input">
					@foreach (var mouse in (SelectList)ViewBag.MouseEnum)
					{
						<option value="@mouse.Value">@mouse.Text</option>
					}
				</select>
			</div>
		</div>

		@* Mousepad *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Mousepad" class="form-label pt">Mousepad</label>
			</div>
			<div class="flex-1">
				<input type="text" id="Mousepad" name="Mousepad" class="form-input" />
			</div>
		</div>

		@* Country *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="CountryID" class="form-label pt">Country</label>
			</div>
			<div class="flex-1">
				<select name="CountryID" id="CountryID" class="form-input">
					<option value="">Please Select</option>
					@foreach (CountryResponse country in ViewBag.Countries)
					{
						<option value="@country.CountryID">@country.CountryName</option>
					}
				</select>
			</div>
		</div>

		@* Date of Birth *@
		<div class="form-field flex">
			<div class="w-25">
				<label for="DateOfBirth" class="form-label pt">Date of Birth</label>
			</div>
			<div class="flex-1">
				<input type="date" id="DateOfBirth" name="DateOfBirth" class="form-input" />
			</div>
		</div>

		@* Submit *@
		<div class="form-field flex">
			<div class="w-25">
			</div>
			<div class="flex-1">
				<button class="button button-green-back">Add Player</button>

				@if (ViewBag.Errors != null)
				{
					<div class="text-red ml">
						<ul>
							@foreach (string error in ViewBag.Errors)
							{
								<li class="ml">@error</li>
							}
						</ul>
					</div>
				}
			</div>
		</div>

	</form>
</div>
